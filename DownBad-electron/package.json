{
  "name": "downbad-electron",
  "version": "2.0.0",
  "description": "DownBad v2 - Electron UI for Python video downloader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "dist": "electron-builder --publish=never"
  },
  "author": "simon",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12"
  },
  "keywords": ["video", "downloader", "youtube", "electron"],
  "type": "commonjs",
  "build": {
    "appId": "com.simon.downbad",
    "productName": "DownBad",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!*.md"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "../app_icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ],
      "extraResources": [
        {
          "from": "../venv",
          "to": "venv",
          "filter": ["**/*"]
        },
        {
          "from": "../download_cli.py",
          "to": "download_cli.py"
        }
      ]
    },
    "dmg": {
      "title": "DownBad v2.0.0",
      "icon": "../app_icon.icns",
      "background": null,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 140,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
